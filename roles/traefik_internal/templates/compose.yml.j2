services:
  traefik_internal:
    image: "{{ deploy_images.traefik.image }}:{{ deploy_images.traefik.tag | default('latest') }}"
    container_name: traefik_internal
    command:
      - "--configFile=/etc/traefik/traefik.yml"
    ports:
      - "80:80"        # interner HTTP entrypoint
      - "443:443"      # interner HTTPS entrypoint 
      - "8081:8080"    # Dashboard (zum Testen)
    volumes:
      - "{{ traefik_internal_.root }}/certs:/etc/traefik/certs:ro"
      - "{{ traefik_internal_.root }}/traefik.yml:/etc/traefik/traefik.yml:ro"
      - "{{ traefik_internal_.root }}/dynamic:/etc/traefik/dynamic:ro"
    restart: unless-stopped
    networks:
      - proxy

networks:
  proxy:
    external: true